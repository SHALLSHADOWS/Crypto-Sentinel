# Crypto Sentinel - Configuration Template
# Copier ce fichier vers .env et remplir avec vos vraies valeurs

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Crypto Sentinel
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Connection
MONGODB_URL=mongodb://localhost:27017/crypto_sentinel
# Pour MongoDB Atlas :
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/crypto_sentinel

# Redis Cache (optionnel)
REDIS_URL=redis://localhost:6379/0
# Pour Redis Cloud :
# REDIS_URL=redis://username:password@host:port/0

# =============================================================================
# ETHEREUM BLOCKCHAIN
# =============================================================================
# Alchemy API (recommandé)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API (alternative)
INFURA_API_KEY=your_infura_api_key_here

# Réseau Ethereum
ETHEREUM_NETWORK=mainnet
# Options: mainnet, goerli, sepolia

# =============================================================================
# INTELLIGENCE ARTIFICIELLE
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Coûts et limites
MAX_DAILY_GPT_COST_USD=50.0
GPT_RATE_LIMIT_PER_MINUTE=20

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================
# Bot Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Format: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Chat/Channel ID pour les notifications
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
# Format: -1001234567890 (pour un channel) ou 123456789 (pour un chat privé)

# Paramètres des notifications
ENABLE_TELEGRAM_NOTIFICATIONS=true
TELEGRAM_RATE_LIMIT_PER_MINUTE=20
NOTIFICATION_COOLDOWN_MINUTES=5

# =============================================================================
# APIS EXTERNES (OPTIONNEL)
# =============================================================================
# Dexscreener API
DEXSCREENER_API_KEY=your_dexscreener_api_key_here
ENABLE_DEXSCREENER=true
DEXSCREENER_RATE_LIMIT=10

# Dextools API
DEXTOOLS_API_KEY=your_dextools_api_key_here
ENABLE_DEXTOOLS=false

# Twitter API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
ENABLE_TWITTER_MONITORING=false
TWITTER_RATE_LIMIT=100

# =============================================================================
# SEUILS D'ANALYSE
# =============================================================================
# Score minimum pour notification
MIN_NOTIFICATION_SCORE=7.0

# Liquidité minimum (USD)
MIN_LIQUIDITY_USD=10000

# Âge maximum du token (heures)
MAX_TOKEN_AGE_HOURS=24

# Volume minimum 24h (USD)
MIN_VOLUME_24H_USD=5000

# Market cap minimum (USD)
MIN_MARKET_CAP_USD=50000

# =============================================================================
# MONITORING ET INTERVALLES
# =============================================================================
# Intervalle de scan (secondes)
SCAN_INTERVAL_SECONDS=30

# Intervalle de nettoyage DB (heures)
DB_CLEANUP_INTERVAL_HOURS=24

# Intervalle de génération de stats (minutes)
STATS_GENERATION_INTERVAL_MINUTES=15

# Timeout pour les requêtes externes (secondes)
EXTERNAL_API_TIMEOUT_SECONDS=30

# =============================================================================
# SÉCURITÉ
# =============================================================================
# Clé secrète pour JWT (générer une clé aléatoirement)
SECRET_KEY=your_secret_key_here_generate_random_string

# CORS Origins (pour l'API)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting API
API_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# LOGGING
# =============================================================================
# Niveau de log
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Fichiers de log
LOG_FILE_PATH=logs/crypto_sentinel.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Log vers console
LOG_TO_CONSOLE=true

# =============================================================================
# PERFORMANCE
# =============================================================================
# Pool de connexions MongoDB
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1

# Cache TTL (secondes)
CACHE_TTL_SECONDS=3600
TOKEN_ANALYSIS_CACHE_TTL=1800
PRICE_CACHE_TTL=300

# Limites de traitement
MAX_CONCURRENT_ANALYSES=5
MAX_QUEUE_SIZE=100

# =============================================================================
# NOTIFICATIONS AVANCÉES
# =============================================================================
# Webhook pour notifications personnalisées
WEBHOOK_URL=
WEBHOOK_SECRET=

# Discord webhook (optionnel)
DISCORD_WEBHOOK_URL=

# Slack webhook (optionnel)
SLACK_WEBHOOK_URL=

# =============================================================================
# DÉVELOPPEMENT
# =============================================================================
# Mode développement
DEV_MODE=true

# Rechargement automatique
AUTO_RELOAD=true

# Profiling
ENABLE_PROFILING=false

# Tests
TEST_DATABASE_URL=mongodb://localhost:27017/crypto_sentinel_test
TEST_REDIS_URL=redis://localhost:6379/1